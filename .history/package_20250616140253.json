{
  "name": "litecmms-v2",
  "version": "2.0.0",
  "description": "Advanced CMMS System v2.0 - Enterprise Maintenance Management",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "dev:server": "nodemon --exec ts-node server/index.ts",
    "build:server": "tsc -p server/tsconfig.json",
    "start:server": "node dist/server/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "test": "vitest",
    "test:e2e": "playwright test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "sys:start": "powershell -ExecutionPolicy Bypass -File scripts/system-manager.ps1 -Action start",
    "sys:stop": "powershell -ExecutionPolicy Bypass -File scripts/system-manager.ps1 -Action stop",
    "sys:restart": "powershell -ExecutionPolicy Bypass -File scripts/system-manager.ps1 -Action restart",
    "sys:status": "powershell -ExecutionPolicy Bypass -File scripts/system-manager.ps1 -Action status",
    "reset": "powershell -ExecutionPolicy Bypass -File scripts/reset-system.ps1",
    "quick-start": "powershell -ExecutionPolicy Bypass -File scripts/quick-start-simple.ps1",
    "stop-all": "powershell -ExecutionPolicy Bypass -File scripts/stop-all.ps1",
    "status": "powershell -ExecutionPolicy Bypass -File scripts/status-check.ps1"
  },
