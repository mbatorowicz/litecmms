{
  "name": "litecmms-monorepo",
  "version": "2.0.0",
  "description": "Advanced CMMS System v2.0 - Enterprise Maintenance Management Monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "turbo build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "start": "pnpm --parallel --filter \"./apps/*\" start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean",
    "db:generate": "pnpm --filter api db:generate",
    "db:push": "pnpm --filter api db:push",
    "db:studio": "pnpm --filter api db:studio",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/start-dual.ps1",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/stop-dual.ps1",
    "status": "powershell -ExecutionPolicy Bypass -File scripts/status-dual.ps1",
    "sys:start": "powershell -ExecutionPolicy Bypass -File scripts/system-manager.ps1 -Action start",
    "sys:stop": "powershell -ExecutionPolicy Bypass -File scripts/system-manager.ps1 -Action stop",
    "sys:restart": "powershell -ExecutionPolicy Bypass -File scripts/system-manager.ps1 -Action restart",
    "sys:status": "powershell -ExecutionPolicy Bypass -File scripts/system-manager.ps1 -Action status",
    "reset": "powershell -ExecutionPolicy Bypass -File scripts/reset-system.ps1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.2.3",
    "typescript": "^5.3.3"
  }
}
